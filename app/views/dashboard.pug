doctype html
html
  head
    meta(charset='utf-8')
    title Dashboard
    link(rel='stylesheet' href='/styles.css')
  body
    .container
      header
        if locals.user && locals.user.role === 'admin'
          h1 Admin dashboard
        else
          h1 Your saved recipes
        a.button(href='/') ← Search

      if locals.user && locals.user.role === 'admin'
        // Admin controls
        .admin-grid
          a.card(href='/admin/recipes')
            h3 Recipe management
            p View all recipes, add new recipes
          a.card(href='/admin/users')
            h3 User management
            p View user emails and names
      else
        if saved && saved.length
          section.recipes
            each r in saved
              article.card
                h2= r.title
                p= r.prepTime
        else
          p No saved recipes yet — from any recipe click the star to add it here.
