doctype html
html
  head
    meta(charset='utf-8')
    title Edit recipe
    link(rel='stylesheet' href='/styles.css')
  body
    .container
      header
        h1 Edit recipe
        a.button(href='/admin/recipes') ‚Üê Back to recipes

      if error
        p.error= error

      form(action=`/admin/recipes/${recipe.id}/edit` method='post')
        label Title
          input(type='text' name='title' required value=recipe.title)
        label Ingredients (comma separated)
          input(type='text' name='ingredients' value=(Array.isArray(recipe.ingredients)?recipe.ingredients.join(', '):recipe.ingredients))
        label Dietary (comma separated)
          input(type='text' name='dietary' value=(Array.isArray(recipe.dietary)?recipe.dietary.join(', '):recipe.dietary))
        label Meal Type (comma separated)
          input(type='text' name='mealType' value=(Array.isArray(recipe.mealType)?recipe.mealType.join(', '):recipe.mealType))
        label Cuisine (comma separated)
          input(type='text' name='cuisine' value=(Array.isArray(recipe.cuisine)?recipe.cuisine.join(', '):recipe.cuisine))
        label PrepTime
          input(type='text' name='prepTime' value=recipe.prepTime)
        label Instructions
          textarea(name='instructions')= recipe.instructions
        button(type='submit') Save changes
