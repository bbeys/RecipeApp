doctype html
html
  head
    meta(charset='utf-8')
    title Admin — Users
    link(rel='stylesheet' href='/styles.css')
  body
    .container
      header
        h1 User management
        a.button(href='/dashboard') ← Back to dashboard

      if users && users.length
        table.users
          thead
            tr
              th ID
              th Name
              th Email
              th Role
          tbody
            each u in users
              tr
                td= u.id
                td= u.name
                td= u.email
                td= u.role
      else
        p No users found.
