doctype html
html
  head
    meta(charset='utf-8')
    title Profile
    link(rel='stylesheet' href='/styles.css')
  body
    .container
      header
        h1 Edit profile
        a.button(href='/') ‚Üê Back to search

      if error
        p.error= error
      if success
        p.success= success

      form(action='/profile' method='post')
        label Name
          input(type='text' name='name' value=(user && user.name) || '')
        label Email
          input(type='email' name='email' value=(user && user.email) || '')
        label Avatar (url)
          input(type='text' name='avatar' value=(user && user.avatar) || '')
        label New password (leave blank to keep)
          input(type='password' name='password')
        button(type='submit') Save profile
